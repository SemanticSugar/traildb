#!/bin/bash
set -e

TMP=`tempfile -p trailm`
ROOT=`dirname $0`
DIR=`dirname $1`
PREFIX=`basename $1`
shift
NUM_PROC=$1
shift
LIMIT=$1
shift
QUERY=( "$@" )

if [ -z "$MIXMAX_COUNTERS" ]
then
    COUNTERS=""
else
    COUNTERS="--counters-prefix=sampler --counters-file=$MIXMAX_COUNTERS"
fi

echo "Running $NUM_PROC processes in parallel, limit is $LIMIT" >&2

find $DIR -maxdepth 1 -type d -follow -iname "$PREFIX*" -printf '%f\n' > $TMP.inputs

echo "Found $(wc -l $TMP.inputs | cut -d ' ' -f 1) chunks" >&2

cat $TMP.inputs |\
    xargs -r -n 1 -P $NUM_PROC -I '{}'\
         $ROOT/trail-mix --output-file=$TMP.'{}'.query $DIR/'{}' "${QUERY[@]}" length

echo "Query executed" >&2

if [ "$LIMIT" != "unlimited" ]
then
    cat $TMP*.query | $ROOT/trail-mix $COUNTERS - limit=$LIMIT |\
        cut -d ' ' -f 1 > $TMP.chosen
else
    cat $TMP*.query | $ROOT/trail-mix $COUNTERS - |\
        cut -d ' ' -f 1 > $TMP.chosen
fi

echo "Matches aggregated" >&2

cat $TMP.inputs |\
    xargs -r -n 1 -P $NUM_PROC -I '{}'\
         $ROOT/trail-mix --output-trails\
                         --input-file=$TMP.chosen\
                         --output-file=$TMP.'{}'.out - open=$DIR/'{}'

cat $TMP.*.out

echo "Done" >&2

rm $TMP.*
